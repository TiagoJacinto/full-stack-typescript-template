{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
  },
  "include": [
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    ".eslintrc.cjs"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ]
}
